{
  "tests": [
    {
      "name": "OPTIONS request for CORS",
      "method": "OPTIONS",
      "path": "/?action=get_user",
      "expectedStatus": 200
    },
    {
      "name": "Get user data - missing telegram_id",
      "method": "POST",
      "path": "/?action=get_user",
      "body": {},
      "expectedStatus": 400,
      "expectedBody": {
        "error": "telegram_id required"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Create new user",
      "method": "POST",
      "path": "/?action=get_user",
      "body": {
        "telegram_id": 999888777,
        "username": "test_user"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "telegram_id": 999888777,
        "balance": 0,
        "referral_code": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Check referral code validity",
      "method": "GET",
      "path": "/?action=check_referral&code=TESTCODE",
      "expectedStatus": 200,
      "expectedBody": {
        "valid": false
      },
      "bodyMatcher": "partial"
    }
  ]
}