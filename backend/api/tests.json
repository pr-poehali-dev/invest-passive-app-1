{
  "tests": [
    {
      "name": "OPTIONS request for CORS",
      "method": "OPTIONS",
      "path": "/?action=get_user",
      "expectedStatus": 200
    },
    {
      "name": "Register - missing data",
      "method": "POST",
      "path": "/?action=register",
      "body": {
        "email": "test@example.com"
      },
      "expectedStatus": 400,
      "expectedBody": {
        "error": "Email and password required"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Login - invalid credentials",
      "method": "POST",
      "path": "/?action=login",
      "body": {
        "email": "nonexistent@example.com",
        "password": "wrongpass"
      },
      "expectedStatus": 401,
      "expectedBody": {
        "error": "Invalid email or password"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Check referral code validity",
      "method": "GET",
      "path": "/?action=check_referral&code=TESTCODE",
      "expectedStatus": 200,
      "expectedBody": {
        "valid": false
      },
      "bodyMatcher": "partial"
    }
  ]
}